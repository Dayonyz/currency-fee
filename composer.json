{
    "name": "currency/fee",
    "type": "project",
    "description": "Transaction Fee Calculator",
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "ext-curl": "*",
        "phpunit/phpunit": "^10.1",
        "symfony/console": "^6.4",
        "vlucas/phpdotenv": "^5.6"
    },
    "autoload": {
        "psr-4": {
            "Src\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        },
        "files": [
            "src/Helpers/functions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require-dev": {
        "php-mock/php-mock-phpunit": "^2.13"
    }
}
